<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <Version>0.0.3</Version>
    <Description>RPC client library for NANO (ex RaiBlocks)</Description>
    <PackageProjectUrl>https://github.com/justdmitry/NanoRpcSharp</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/justdmitry/NanoRpcSharp.git</RepositoryUrl>
    <Copyright>Dmitry Popov, 2018</Copyright>
    <PackageLicenseUrl>https://github.com/justdmitry/NanoRpcSharp/blob/master/LICENSE</PackageLicenseUrl>
    <PackageTags>nano raiblocks rpc</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReleaseNotes>'Send' added</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\GlobalSuppressions.cs" Link="GlobalSuppressions.cs" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.0.1" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.0-beta006">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>

</Project>
